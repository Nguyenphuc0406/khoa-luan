<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils"></import>
        <import type="android.view.View"></import>

        <variable
            name="item"
            type="com.hust.medtech.model.Model"></variable>

        <variable
            name="index"
            type="int"></variable>

        <variable
            name="viewHolder"
            type="com.hust.medtech.base.BaseRecyclerview.BaseViewHolder"></variable>
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:onClick="@{v ->viewHolder.click()}"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="STT: "
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@{item.index}"
                    android:textColor="@color/black1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tên BN: "
                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@{item.patientName}"
                    android:textColor="@color/black1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tuổi: "
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@{item.patientAge}"
                    android:textColor="@color/black1"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Giới tính: "
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@{item.gender}"
                    android:textColor="@color/black1"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Trạng thái: "
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/chua_kham"
                    android:visibility="@{item.status ==0 ? View.VISIBLE : View.GONE}"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:backgroundTint="@color/red"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/boder"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/da_kham"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="@{item.status ==1 ? View.VISIBLE : View.GONE}"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/green"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@drawable/boder"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mô tả: "
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@{item.description }"
                    android:textColor="@color/black1"
                    android:layout_marginLeft="@dimen/_2sdp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
