<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="item"
            type="com.hust.medtech.model.Model"></variable>
        <variable
            name="index"
            type="int"></variable>
        <import type="android.view.View"></import>

        <variable
            name="viewHolder"
            type="com.hust.medtech.base.BaseRecyclerview.BaseViewHolder"></variable>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:onClick="@{v-> viewHolder.click()}"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:text="@{String.valueOf(index+1)}"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"
                        android:background="@drawable/shape_oval"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/_20sdp"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Khoa khám:"
                        android:textSize="@dimen/_12ssp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{item.deptName}"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Phòng khám:"
                        android:textSize="@dimen/_12ssp"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{item.deptRoom}"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Tên bác sĩ:"
                        android:textSize="@dimen/_12ssp"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{item.doctorName}"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="SĐT Bác sĩ:"
                        android:textSize="@dimen/_12ssp"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{item.doctorPhone}"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Trạng thái: "
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        tools:visibility="gone"
                        android:text="@string/bs_chua_kham"
                        android:visibility="@{item.isDoctorAccepted ==0 ? View.VISIBLE : View.GONE}"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:backgroundTint="@color/red"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"
                        android:background="@drawable/boder"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/bs_chi_dinh_kham"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="@{item.isDoctorAccepted ==1 ? View.VISIBLE : View.GONE}"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/green"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@drawable/boder"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center|right|bottom"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/boder2"
                    android:layout_width="@dimen/_40sdp"
                    android:padding="@dimen/_6sdp"
                    android:gravity="center"
                    android:orientation="vertical"


                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="STT"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"

                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_oval"
                        android:backgroundTint="@color/green"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="@{item.index}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/boder2"
                    android:layout_width="@dimen/_40sdp"
                    android:padding="@dimen/_6sdp"
                    android:gravity="center"
                    android:orientation="vertical"


                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Tổng"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="@dimen/_16sdp"
                        android:text="@{item.totalIndex}"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        android:background="@drawable/shape_oval"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/_16sdp"></TextView>


                </LinearLayout>
                <TextView
                    android:visibility="@{item.isDoctorAccepted ==1 ? View.VISIBLE : View.GONE}"
                    android:layout_width="wrap_content"
                    android:text="@string/chi_tiet"
                    android:onClick="@{v-> viewHolder.click()}"
                    android:clickable="true"
                    android:gravity="bottom"
                    app:textLink="@{@string/chi_tiet}"
                    android:textSize="@dimen/_10ssp"
                    android:paddingTop="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/color_app2"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
