<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils"></import>
        <import type="android.view.View"></import>

        <variable
            name="item"
            type="com.hust.medtech.model.Model"></variable>

        <variable
            name="index"
            type="int"></variable>

        <variable
            name="viewHolder"
            type="com.hust.medtech.base.BaseRecyclerview.BaseViewHolder"></variable>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:onClick="@{v ->viewHolder.click()}"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:text="@{String.valueOf(index+1)}"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"
                        android:background="@drawable/shape_oval"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/_20sdp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Tên chỉ đinh CLS:"
                        android:textStyle="bold">

                    </TextView>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@{item.name}"

                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/green"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/boder"
                            android:textColor="@color/white"


                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:text="Phòng khám: "
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@{item.consultingRoom}"
                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/cam"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/boder"
                            android:textColor="@color/white"


                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Mô tả: "
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{item.description }"
                        android:textColor="@color/black1"
                        android:layout_marginLeft="@dimen/_2sdp"

                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
